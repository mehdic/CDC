PORT=4002
NODE_ENV=development

# Database Configuration
# NOTE: Use individual DB_* variables instead of DATABASE_URL for security
DB_HOST=localhost
DB_PORT=5432
DB_USER=your-db-username
DB_PASSWORD=your-db-password
DB_NAME=prescription_service
DB_SYNCHRONIZE=true
DB_LOGGING=false

# Legacy DATABASE_URL (deprecated, use DB_* variables above)
DATABASE_URL=postgresql://user:password@localhost:5432/metapharm

# AWS Configuration
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=metapharm-prescriptions
AWS_TEXTRACT_REGION=eu-central-1

# Service Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
AI_CONFIDENCE_THRESHOLD=0.7
