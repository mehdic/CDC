{
  "name": "@metapharm/inventory-service",
  "version": "1.0.0",
  "description": "Real-Time Inventory Management with QR Traceability and AI Forecasting",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "inventory",
    "qr-code",
    "healthcare",
    "forecast",
    "alerts"
  ],
  "author": "MetaPharm Connect",
  "license": "UNLICENSED",
  "dependencies": {
    "@aws-sdk/client-forecast": "^3.400.0",
    "@aws-sdk/client-forecastquery": "^3.400.0",
    "bull": "^4.11.5",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.7",
    "better-sqlite3": "^12.4.1",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts"
    ],
    "testTimeout": 10000,
    "forceExit": true,
    "detectOpenHandles": true
  }
}
