# Service Configuration
PORT=4000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this

# Microservices Endpoints
AUTH_SERVICE_URL=http://localhost:4001
PRESCRIPTION_SERVICE_URL=http://localhost:4002
TELECONSULTATION_SERVICE_URL=http://localhost:4003
INVENTORY_SERVICE_URL=http://localhost:4004
NOTIFICATION_SERVICE_URL=http://localhost:4005

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Whitelist IPs that bypass rate limiting (comma-separated)
# For E2E testing, add localhost IPs: 127.0.0.1,::1,::ffff:127.0.0.1
# RATE_LIMIT_WHITELIST_IPS=127.0.0.1,::1,::ffff:127.0.0.1

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:19006

# Health Check
HEALTH_CHECK_TIMEOUT_MS=2000
