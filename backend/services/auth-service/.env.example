# Service Configuration
PORT=4001
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://metapharm:metapharm_dev_password@localhost:5432/metapharm
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=metapharm
DATABASE_USER=metapharm
DATABASE_PASSWORD=metapharm_dev_password

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d

# HIN e-ID Configuration (Swiss Healthcare e-ID Provider)
# Register at: https://www.hin.ch/
HIN_CLIENT_ID=your-hin-client-id
HIN_CLIENT_SECRET=your-hin-client-secret
HIN_REDIRECT_URI=http://localhost:4001/auth/hin/callback
HIN_AUTHORIZATION_ENDPOINT=https://oauth2.hin.ch/authorize
HIN_TOKEN_ENDPOINT=https://oauth2.hin.ch/token
HIN_USERINFO_ENDPOINT=https://oauth2.hin.ch/userinfo

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS_PER_USER=5

# MFA Configuration
MFA_ISSUER=MetaPharm Connect
MFA_WINDOW=1

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security
BCRYPT_SALT_ROUNDS=10
