{
  "name": "@metapharm/backend",
  "version": "0.1.0",
  "private": true,
  "description": "MetaPharm Connect Backend - Microservices API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc --project tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:contract": "newman run tests/contract/postman_collection.json",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json}' 'tests/**/*.{ts,tsx,json}'",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "seed:dev": "ts-node shared/db/seeds/dev-seed.ts",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "express": "^4.18.3",
    "typeorm": "^0.3.20",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "socket.io": "^4.7.4",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "aws-sdk": "^2.1550.0",
    "@aws-sdk/client-s3": "^3.513.0",
    "@aws-sdk/client-textract": "^3.513.0",
    "@aws-sdk/client-kms": "^3.513.0",
    "dotenv": "^16.4.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "joi": "^17.12.1",
    "zod": "^3.22.4",
    "axios": "^1.6.7",
    "uuid": "^9.0.1",
    "date-fns": "^3.3.1",
    "multer": "^1.4.5-lts.1",
    "twilio": "^5.0.0",
    "opentelemetry-api": "^1.8.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.19",
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.8",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "newman": "^6.1.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "node-pg-migrate": "^7.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
