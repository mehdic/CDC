# ========================================
# MetaPharm Connect Mobile Apps Environment Variables
# ========================================

# API Configuration
API_BASE_URL=http://localhost:4000
API_VERSION=v1
API_TIMEOUT=30000

# Environment
NODE_ENV=development

# Google Maps API (Delivery Tracking, Location Services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Firebase Configuration (Push Notifications)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_PROJECT_ID=metapharm-mobile
FIREBASE_MESSAGING_SENDER_ID=your-firebase-sender-id
FIREBASE_APP_ID=your-firebase-app-id

# iOS Firebase Configuration
FIREBASE_IOS_CLIENT_ID=your-ios-client-id
FIREBASE_IOS_REVERSED_CLIENT_ID=com.googleusercontent.apps.your-reversed-client-id

# Android Firebase Configuration
FIREBASE_ANDROID_CLIENT_ID=your-android-client-id

# App Version
APP_VERSION=0.1.0
APP_BUILD_NUMBER=1

# Feature Flags (Mobile)
ENABLE_BIOMETRIC_AUTH=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_VIDEO_CALLS=true

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_DEBUG=true

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-mobile

# Deep Linking
DEEP_LINK_SCHEME=metapharm
DEEP_LINK_HOST=connect
